---
import Card from './Card.astro';
import ProfileCard from './ProfileCard.astro';
import { socials, donations } from '../data/links';
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 p-4 max-w-7xl mx-auto">
  <ProfileCard
    name="Your Name"
    title="Full Stack Developer & Designer"
    bio="Passionate about creating beautiful and functional web experiences. Always learning, always growing."
    avatar="https://api.dicebear.com/7.x/pixel-art/svg?seed=your-name"
  />
  
  {socials.map(social => (
    <Card {...social} />
  ))}

  {donations.map(donation => (
    <Card {...donation} />
  ))}
</div>