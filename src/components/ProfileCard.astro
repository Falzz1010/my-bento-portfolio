---
interface Props {
  name: string;
  title: string;
  bio: string;
  avatar: string;
}

const { name, title, bio, avatar } = Astro.props;
---

<div class="col-span-full lg:col-span-2 p-8 bg-white dark:bg-gray-800 border-4 border-black shadow-[8px_8px_0px_0px_rgba(0,0,1)] hover:shadow-none hover:translate-x-[6px] hover:translate-y-[6px] transition-all duration-200">
  <div class="flex flex-col md:flex-row items-center gap-6 text-center md:text-left">
    <div class="w-32 h-32 md:w-40 md:h-40 rounded-full border-4 border-black overflow-hidden">
      <img
        src={avatar}
        alt={name}
        class="w-full h-full object-cover"
      />
    </div>
    <div class="space-y-4">
      <h1 class="font-retro text-2xl md:text-3xl">{name}</h1>
      <p class="font-jakarta text-lg md:text-xl text-gray-600 dark:text-gray-300">{title}</p>
      <p class="font-jakarta text-sm md:text-base text-gray-500 dark:text-gray-400 max-w-md">{bio}</p>
    </div>
  </div>
</div>